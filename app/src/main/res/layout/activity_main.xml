<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/md_elevation_button"
            app:title="   "
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIconTint="?attr/colorOnPrimary"
            android:paddingStart="@dimen/md_space_16"
            android:paddingEnd="@dimen/md_space_8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface">

            <FrameLayout
                android:id="@+id/contact_us_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_space_16"
                android:background="@drawable/bg_md3_surface_card"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="@dimen/md_elevation_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="640dp"
                app:layout_constraintHeight_max="640dp"
                android:clickable="true"
                android:onClick="closeFragment"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true" />

            <FrameLayout
                android:id="@+id/mmse_picture_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_space_16"
                android:background="@drawable/bg_md3_surface_card"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="@dimen/md_elevation_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="550dp"
                app:layout_constraintHeight_max="280dp"
                android:clickable="true"
                android:onClick="closeFragment"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true" />

            <FrameLayout
                android:id="@+id/fragment_container2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_space_16"
                android:background="@drawable/bg_md3_surface_card"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="@dimen/md_elevation_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="520dp"
                app:layout_constraintHeight_max="600dp" />

            <FrameLayout
                android:id="@+id/timer_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_space_16"
                android:background="@drawable/bg_md3_surface_card"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="@dimen/md_elevation_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_max="280dp"
                app:layout_constraintHeight_max="140dp" />

            <FrameLayout
                android:id="@+id/accumulator_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/md_space_16"
                android:background="@drawable/bg_md3_surface_card"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="@dimen/md_elevation_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_max="280dp"
                app:layout_constraintHeight_max="160dp" />


            <com.bupt.myapplication.view.DrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:paddingStart="@dimen/md_space_16"
                android:text="Pen ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- MD3 输入框：悬浮标签 + 可配置错误提示样式 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pen_id_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/md_space_16"
                android:layout_marginEnd="@dimen/md_space_16"
                android:layout_weight="1"
                android:hint="Pen ID"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="@dimen/md_corner_8"
                app:boxCornerRadiusTopEnd="@dimen/md_corner_8"
                app:boxCornerRadiusBottomStart="@dimen/md_corner_8"
                app:boxCornerRadiusBottomEnd="@dimen/md_corner_8"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="CFAF08A26A04" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- MD3 按钮：主/次/文本区分 -->
            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="@dimen/md_space_16"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接蓝牙笔"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="@dimen/md_space_8"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="@dimen/md_space_8"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试按钮"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- The navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorSurface"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_view"
        app:itemIconTint="?attr/colorOnSurfaceVariant"
        app:itemTextColor="?attr/colorOnSurface"
        app:itemIconPadding="16dp"
        app:itemRippleColor="?attr/colorPrimary"
        app:itemShapeFillColor="@android:color/transparent"
        app:itemShapeInsetStart="16dp"
        app:itemShapeInsetEnd="16dp"
        app:itemShapeInsetTop="4dp"
        app:itemShapeInsetBottom="4dp" />

</androidx.drawerlayout.widget.DrawerLayout>
