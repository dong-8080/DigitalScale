<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".fragment.FeedbackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/md_space_24">

        <!-- App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_feedback"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="16dp"
            app:title="意见反馈"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIconTint="?attr/colorOnSurface"
            android:background="@color/white"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <!-- 反馈表单卡片：优化视觉效果 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="@dimen/md_corner_8"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"

            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/md_space_24">

                <!-- 表单标题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写您的反馈信息"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- 姓名输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_feedback_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="您的姓名"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/md_corner_8"
                    app:boxCornerRadiusTopEnd="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomStart="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomEnd="@dimen/md_corner_8"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_feedback_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 邮箱输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_feedback_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="您的邮箱地址"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/md_corner_8"
                    app:boxCornerRadiusTopEnd="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomStart="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomEnd="@dimen/md_corner_8"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_feedback_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 主题输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_feedback_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="反馈主题"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/md_corner_8"
                    app:boxCornerRadiusTopEnd="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomStart="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomEnd="@dimen/md_corner_8"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_feedback_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 内容输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_feedback_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="请详细描述您的反馈内容"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/md_corner_8"
                    app:boxCornerRadiusTopEnd="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomStart="@dimen/md_corner_8"
                    app:boxCornerRadiusBottomEnd="@dimen/md_corner_8"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_feedback_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:minLines="6"
                        android:maxLines="12"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 提交按钮：使用填充样式（绿色背景） -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发送反馈邮件"
                    app:icon="@drawable/ic_send"
                    style="@style/Widget.Material3.Button"
                    android:padding="@dimen/md_space_16"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 信息卡片：使用更浅的背景 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/md_corner_8"
            app:cardElevation="1dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/md_space_20">

                <!-- 信息图标和标题 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="8dp"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重要提示"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- 提示内容 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 您的反馈对我们非常重要，我们会认真阅读每一条反馈\n• 提交后将自动打开邮件应用，您可以检查内容后发送\n• 如遇邮件客户端问题，请手动发送到：dong1024mail@163.com\n• 我们会在收到反馈后尽快回复您"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

