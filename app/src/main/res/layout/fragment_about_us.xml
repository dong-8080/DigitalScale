<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 标题栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tv_about_us_title_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="关于我们"
                android:textAppearance="?attr/textAppearanceHeadline4"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_close_about_us"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="关闭"
                android:padding="8dp" />
        </RelativeLayout>

        <!-- 应用信息卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tv_app_info_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="应用信息"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本号："
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开发单位："
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京邮电大学脑认知与智能医学中心"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 团队介绍卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_team_intro_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tv_team_intro_title_popup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目与团队介绍"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_team_intro_content_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北京邮电大学脑认知与智能医学中心支撑北京邮电大学&quot;智能+医学+X&quot;交叉学科建设，是学校智能医学工程专业建设的重要团队。目前中心有教授/研究员4人，副教授/副研究员5人，讲师2人，工程师2人，博士后2人。80%教学科研人员有在剑桥大学、加州大学旧金山分校、杜克大学、印第安纳大学、荷兰阿姆斯特丹自由大学、澳大利亚昆士兰大学、新西兰奥克兰大学留学访问经历等。\n\n中心依托以3.0T磁共振为核心设备建立了具有一流软硬件设施的北邮智能医学平台，围绕脑认知原理解析、认知障碍相关重大脑疾病早期智能识别技术、儿童青少年脑智发育、新型无创脑机接口等研究方向，开展了一系列具有北邮特色的&quot;信、医、工&quot;交叉融合的前沿科学研究。"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="?attr/colorOnSurface"
                    android:lineSpacingExtra="4dp"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 项目负责人卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_project_lead_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tv_project_lead_title_popup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目负责人"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_project_lead_name_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="刘勇 教授"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_project_lead_details_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="北京邮电大学人工智能学院副院长，研究以脑影像为核心技术手段，以脑影像在重大神经精神疾病中的应用为导向展开。研究工作以探究多中心、多模态脑影像计算方法及AD的影像异常表征为核心，以期发现AD早期识别脑影像标记。代表性结果为：基于多中心、大样本发现了AD等在脑结构和脑功能上具有高敏感性、高特异性和泛化性的脑异常表征，为AD早期诊断提供理论依据和预后判断的客观评价指标。"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurface"
                    android:lineSpacingExtra="4dp"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 联系与关注卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_contact_follow_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tv_contact_title_popup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="联系与关注"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:id="@+id/tv_wechat_id_popup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信公众号"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_wechat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAIMI"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant">

                        <ImageView
                            android:id="@+id/iv_qr_code_popup"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:padding="12dp"
                            android:src="@drawable/qr_code"
                            android:scaleType="fitCenter"
                            android:contentDescription="微信公众号二维码，点击可放大查看"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="点击二维码可放大查看"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 版权信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2024 北京邮电大学脑认知与智能医学中心"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="保留所有权利"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>