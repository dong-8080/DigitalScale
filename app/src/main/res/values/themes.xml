<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorPrimaryVariant">@color/md_primary_variant</item>
        <item name="colorOnPrimary">@color/md_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/md_on_secondary</item>
        <!-- Surfaces -->
        <item name="android:colorBackground">@color/md_background</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <!-- Error -->
        <item name="colorError">@color/md_error</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Dialog default to Material -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyApplication.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- MaterialAlertDialog 统一覆盖 -->
    <style name="ThemeOverlay.MyApplication.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>
</resources>