<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 配色（核心）：基于主色/强调色衍生；保证可读性（对比度≥4.5:1） -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorPrimaryContainer">@color/brand_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/brand_on_primary_container</item>

        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>
        <item name="colorSecondaryContainer">@color/brand_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/brand_on_secondary_container</item>

        <!-- 背景/表面（注意：背景用 android:colorBackground，避免资源链接失败） -->
        <!-- 强制所有 Material 组件背景为白色 -->
        <item name="android:colorBackground">@color/md3_background</item>
        <item name="colorSurface">@color/md3_surface</item>
        <item name="colorOnSurface">@color/md3_on_surface</item>
        <item name="colorSurfaceVariant">@color/md3_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md3_on_surface_variant</item>
        <item name="colorOutline">@color/md3_outline</item>
        
        <!-- 强制 Material 组件容器背景为白色，避免使用主色容器 -->
        <item name="colorPrimaryContainer">@color/md3_surface</item>
        <item name="colorSecondaryContainer">@color/md3_surface</item>

        <!-- 统一圆角：8dp（MD3推荐） -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApplication.Corner8</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApplication.Corner8</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApplication.Corner8</item>

        <!-- 沉浸式顶部栏：状态栏与Toolbar同色（可选风格偏好） -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 统一弹窗字体与圆角（适用于 MaterialAlertDialogBuilder） -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyApplication.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- 统一圆角 8dp -->
    <style name="ShapeAppearance.MyApplication.Corner8" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/md_corner_8</item>
    </style>

    <!-- Material3 AlertDialog 统一排版：标题/正文/按钮字号与字重按功能区分 -->
    <!-- 注意：为避免部分设备上 m3_alert_dialog 运行时 Inflate 崩溃，这里使用稳定的 MaterialComponents AlertDialog 布局 -->
    <style name="ThemeOverlay.MyApplication.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- 弹窗背景：强制白色（不使用主色容器，避免偏绿） -->
        <item name="android:windowBackground">@drawable/bg_alert_dialog_surface</item>
        <item name="colorSurface">@color/md3_surface</item>
        <item name="colorPrimaryContainer">@color/md3_surface</item>
        <item name="colorSecondaryContainer">@color/md3_surface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.MyApplication.DialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.MyApplication.DialogBody</item>
    </style>
</resources>